includes:
    - vendor/larastan/larastan/extension.neon

parameters:
    level: 5

    paths:
        - src
        - routes
        - database/factories
        - database/seeders

    excludePaths:
        - tests
        - resources
        - public

    databaseMigrationsPath:
        - database/migrations

    ignoreErrors:
        -
            path: src/Http/Resources
            identifier: return.type
            message: '#Method Cachet\\Http\\Resources\\.*?::toRelationships\(\).*#'
